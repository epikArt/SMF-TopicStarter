<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>digger:TopicStarter</id>
	<name>TopicStarter</name>
	<version>1.8.1</version>
	<type>modification</type>
	<install for="1.0 - 1.1.99">
 		<readme type="inline">This mod show little icon near member name in all topic author's posts in a topic.</readme>
		<modification>modification1.xml</modification>
		<modification>languages.xml</modification>
		<modification>languages.utf-8.xml</modification>
		<require-file name="topic_starter.gif" destination="$themedir/images" />
	</install>
	<install for="2.0 - 2.1.99">
 		<readme type="inline">This mod show little icon near member name in all topic author's posts in a topic.</readme>
		<modification>modification2.xml</modification>
		<modification>languages.xml</modification>
		<modification>languages.utf-8.xml</modification>
		<require-file name="topic_starter.gif" destination="$themedir/images" />
	</install>
	<uninstall for="1.0 - 1.1.99">
		<readme type="inline">This will remove TopicStarter mod</readme>
		<modification reverse="true">modification1.xml</modification>
		<modification reverse="true">languages.xml</modification>
		<modification reverse="true">languages.utf-8.xml</modification>
		<remove-file name="$themedir/images/topic_starter.gif" />
	</uninstall>
	<uninstall for="2.0 - 2.1.99">
		<readme type="inline">This will remove TopicStarter mod</readme>
		<modification reverse="true">modification2.xml</modification>
		<modification reverse="true">languages.xml</modification>
		<modification reverse="true">languages.utf-8.xml</modification>
		<remove-file name="$themedir/images/topic_starter.gif" />
	</uninstall>
</package-info>
